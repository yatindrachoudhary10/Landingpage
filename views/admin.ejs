<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/styles/admin.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="admin-container">
    <h1 class="admin-title">Admin Dashboard</h1>

    <!-- Project Management -->
    <section class="admin-section">
      <h2>Project Management</h2>
      <form action="/admin/projects/add" method="POST" enctype="multipart/form-data" class="admin-form">
        <input type="text" name="name" placeholder="Project Name" required>
        <input type="text" name="description" placeholder="Project Description" required>
        <input type="text" name="image" placeholder="Project Image URL" required>
        <button type="submit">Add Project</button>
      </form>

      <div class="admin-list">
        <% projects.forEach(project => { %>
          <div class="admin-card">
            <img src="<%= project.image %>" alt="Project Image">
            <h4><%= project.name %></h4>
            <p><%= project.description %></p>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Client Management -->
    <section class="admin-section">
      <h2>Client Management</h2>
      <form action="/admin/clients/add" method="POST" enctype="multipart/form-data" class="admin-form">
        <input type="text" name="name" placeholder="Client Name" required>
        <input type="text" name="description" placeholder="Client Description" required>
        <input type="text" name="designation" placeholder="Client Designation" required>
        <input type="text" name="image" placeholder="Client Image URL" required>
        <button type="submit">Add Client</button>
      </form>

      <div class="admin-list">
        <% clients.forEach(client => { %>
          <div class="admin-card">
            <img src="<%= client.image %>" alt="Client Image">
            <h4><%= client.name %> - <small><%= client.designation %></small></h4>
            <p><%= client.description %></p>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Contact Form Responses -->
    <section class="admin-section">
      <h2>Contact Form Details</h2>
      <div class="table-responsive">
        <table class="admin-table table table-striped">
          <thead class="table-dark">
            <tr>
              <th>Full Name</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>City</th>
            </tr>
          </thead>
          <tbody>
            <% contacts.forEach(contact => { %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.phone %></td>
                <td><%= contact.city %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Subscribed Emails -->
    <section class="admin-section">
      <h2>Subscribed Email Addresses</h2>
      <div class="table-responsive">
        <table class="admin-table table table-bordered">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Email Address</th>
            </tr>
          </thead>
          <tbody>
            <% subscribers.forEach((sub, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= sub.email %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</body>
</html>
